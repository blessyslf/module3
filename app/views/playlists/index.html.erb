<p id="notice"><%= notice %></p>
<%= form_tag posts_path, :method => 'get' do %>
  <p class="poisk">
    <%= text_field_tag :starts_with, params[:starts_with] %>
    <%= submit_tag "Поиск", :name => nil %>
  </p>
<% end %>
  <%= react_component 'MMenu' %>
  <%= react_component 'OAllPlaylist', { playlists: @playlists } %>

<table style="position: absolute; top:100vw;">
  <thead>
    <tr>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.title %></td>

            <td><%= playlist.content %></td>
        <td><%= link_to 'Show', playlist %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style="position: absolute; top:100vw">
  <%= link_to 'New Playlist', new_playlist_path %>

</div>
