<h2 class="signup">Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email,:class => "placeholderemreg",placeholder:"Электронная почта", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, :class => "placeholderemreg2",placeholder:"Пароль",autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, :class => "check_box" %>
      <%= f.label :remember_me, :class => "remember_me" %>
    </div>
  <% end %>

  <%= f.submit "войти", :class => "actions"%>
<% end %>

  <%= render "devise/shared/links" %>
